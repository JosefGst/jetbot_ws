<launch>
  <!-- rmw_zenoh -->
  <node pkg="rmw_zenoh_cpp" exec="rmw_zenohd" output="screen"/>

  <!-- Launch YDLidar X3 Pro -->
  <include file="$(find-pkg-share jetbot_bringup)/launch/ydlidar_launch.py">
    <arg name="params_file" value="$(find-pkg-share jetbot_bringup)/params/ydlidar_X3.yaml"/>
  </include>

  <!-- diffdrive_arduino -->
  <include file="$(find-pkg-share diffdrive_arduino)/launch/diffbot.launch.py">
    <arg name="use_mock_hardware" value="false"/>
    <arg name="gui" value="False"/>
    <arg name="device" value="/dev/arduino"/>
  </include>

</launch>